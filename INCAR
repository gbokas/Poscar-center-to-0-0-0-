System = AlSm

PREC = Normal #cutoff + wrap around errors.
ENCUT = 240.437 #cutoff energy for planewave basis set
ALGO = Very Fast
LREAL= A
ISMEAR = 1 #BZ integration method (for relaxation).
SIGMA = 0.2 #smearing width in eV (keep TS<1meV/atom)
ISYM=0
ISTART = 0 #o Start from scratch, 1 use old WAVECAR
EDIFF=1E-5

MAXMIX=15 #reuse mixer from one MD step to next
NELMIN =2 # minimum 4 steps per time step, avoid breaking after 2 steps

#MD

IBRION= 2 #0-MD 1-quasi-NEW 2-CG
NSW= 1 #numberof ionic steps taken in minimization. Make it odd.
LCHARG=.FALSE. #WRITE the CHGCAR
LWAVE =.FALSE. #WRITE the wavefunctions

NWRITE=1
NBLOCK=1
